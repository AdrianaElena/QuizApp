@model IEnumerable<QuizApp.Models.TestDTO>

@{ 
    int count = 1, countR = 0;
}

<div class="container">
    <h4 style="margin-top: 4%;"> <span class="label label-info">Questions :</span> </h4>

    @foreach (var question in Model)
    {
        <div class="BlockQ" style="border: 1px solid #bdbdbd; width: 75%; border-radius: 4px; margin-top: 40px; padding: 8px;">

            <div class="question" style="padding: 2%">
                <p>@question.QuestionText</p>
            </div>


            @foreach (var choice in question.AnswerOptions)
            {
                <div class="form-check" style="border: 1px solid #bdbdbd; width: 50%; border-radius: 4px; margin-left: 8%; background-color: #b8bbe0;">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="@choice.Id" value="@choice.Id" />
                    <label class="form-check-label" for="@choice.Id">
                        @choice.AnswerText
                    </label>
                    <br /> <br />
                </div>
            }
        </div>
        <br />
    }
    <br />
    <button type="button" class="btn btn-info">Submit</button>

</div>